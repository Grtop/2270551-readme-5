{
  "name": "user",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "user/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/user",
        "main": "user/src/main.ts",
        "tsConfig": "user/tsconfig.app.json",
        "assets": ["user/src/assets"],
        "isolatedConfig": true,
        "webpackConfig": "user/webpack.config.js"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "user:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "user:build:development"
        },
        "production": {
          "buildTarget": "user:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["user/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "user/jest.config.ts"
      }
    }
  },
  "tags": []
}
